<%- include("partials/header.ejs") %>

<!-- Main Container -->
<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="text-white">Blog Application</h1>
        <a href="/new-post" class="btn btn-success btn-lg mt-3">Create New Post</a>
    </div>

    <!-- Posts Section -->
    <% if (locals.posts && posts.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% for (let i = 0; i < posts.length; i++) { %>
                <div class="col">
                    <!-- Card for Each Post -->
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= posts[i].title %></h5>
                            <p class="card-text"><%= posts[i].content %></p>
                            <p class="text-muted">By: <%= posts[i].autor %></p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/update-post/<%= posts[i].id %>" class="btn btn-warning">Update</a>
                            <form action="/delete-post/<%= posts[i].id %>" method="POST" class="d-inline">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <!-- No Posts Alert -->
        <div class="alert alert-warning text-center" role="alert">
            No posts yet! Create one by clicking the "Create New Post" button.
        </div>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>

